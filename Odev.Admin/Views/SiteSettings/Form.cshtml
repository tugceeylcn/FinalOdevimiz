@using Odev.Domain.ViewModels
@using Odev.Domain.Enums

@model SiteSettingViewModel

@{
    ViewBag.Title = "İletişim Ayar Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_TopPartialView",
    new TopPartialViewModel
    {
        Title = "İletişim Ayar Form",
        ListUrl = Url.Action("Index", "SiteSettings")
    })

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox ">
                <div class="ibox-content">
                    @using (Html.BeginForm("Save", "SiteSettings", FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(x => x.Id)

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.Language, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.DropDownListFor(x => x.Language, EnumHelper.GetSelectList(typeof(LanguageSelection)), "Lütfen Dil Seçiniz !!", new { @class = "form-control", @required = "required" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.Language)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.Email, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.Email)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.Phone, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.Phone)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.Fax, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Fax, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.Fax)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.Adres, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextAreaFor(x => x.Adres, new { @class = "form-control", @rows = 5 })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.Adres)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.Maps, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Maps, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.Maps)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.Logo, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                <input type="file" id="image" class="dropify" name="logo" data-default-file="/Assets/Library/@Model.Logo">
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.Logo)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.Facebook, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Facebook, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.Facebook)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.Twitter, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Twitter, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.Twitter)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.Instagram, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Instagram, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.Instagram)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.Youtube, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Youtube, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.Youtube)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-warning btn-sm" type="reset">Temizle</button>
                                <button class="btn btn-primary btn-sm" type="submit">Kaydet</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->

@section script{
    <script>
        $('.dropify').dropify();

    </script>
}