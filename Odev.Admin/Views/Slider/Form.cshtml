@using Odev.Domain.ViewModels
@using Odev.Domain.Enums

@model SliderViewModel

@{
    ViewBag.Title = "Slider Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_TopPartialView",
    new TopPartialViewModel
    {
        Title = "Slider Form",
        ListUrl = Url.Action("Index", "Slider")
    })

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox ">
                <div class="ibox-content">
                    @using (Html.BeginForm("Save", "Slider", FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(x => x.Id)

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.Language, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.DropDownListFor(x => x.Language, EnumHelper.GetSelectList(typeof(LanguageSelection)), "Lütfen Dil Seçiniz !!", new { @class = "form-control", @required = "required" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.Language)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.Image, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                <input type="file" id="image" name="image" class="dropify" data-default-file="/Assets/images/@Model.Image">
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.Image)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.TextOne, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.TextOne, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.TextOne)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.TextTwo, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.TextTwo, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.TextTwo)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.TextThree, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.TextThree, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.TextThree)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.DisplayOrder, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.DisplayOrder, new { @class = "form-control", @type = "number", min = "1" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.DisplayOrder)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.IsSale, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                <div class="i-checks">
                                    <label>
                                        @Html.CheckBoxFor(x => x.IsSale, new { @checked = "" })
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-warning btn-sm" type="reset">Temizle</button>
                                <button class="btn btn-primary btn-sm" type="submit">Kaydet</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->


@section script{
    <script>
        $('.dropify').dropify();
    </script>
}