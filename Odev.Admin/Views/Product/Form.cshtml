@using Odev.Domain.ViewModels
@using Odev.Domain.Enums

@model ProductViewModel

@{
    ViewBag.Title = "Ürün Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_TopPartialView",
    new TopPartialViewModel
    {
        Title = "Ürün Form",
        ListUrl = Url.Action("Index", "Product")
    })

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox ">
                <div class="ibox-content">
                    @using (Html.BeginForm("Save", "Product", FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(x => x.Id)

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.Language, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.DropDownListFor(x => x.Language, EnumHelper.GetSelectList(typeof(LanguageSelection)), "Lütfen Dil Seçiniz !!", new { @class = "form-control", @required = "required" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.Language)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.ProductCoverImage, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                <input type="file" id="image" class="dropify" name="productImage" data-default-file="/Assets/Library/@Model.ProductCoverImage">
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.ProductCoverImage)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.ProductName, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.ProductName)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.ProductDetail, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextAreaFor(x => x.ProductDetail, new { @class = "form-control", @rows = 10 })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.ProductDetail)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.ProductFirstPrice, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.ProductFirstPrice, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.ProductFirstPrice)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.ProductPrice, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.ProductPrice, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.ProductPrice)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.ProductStock, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.ProductStock, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.ProductStock)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.ProductTickets, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.ProductTickets, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.ProductTickets)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.SkuId, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.SkuId, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.SkuId)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.CategoryId, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.DropDownListFor(x => x.CategoryId, new SelectList(ViewBag.Kategoriler, "Id", "CategoryName"), "Kategori seçiniz.", new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.ColorId, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.DropDownListFor(x => x.ColorId, new SelectList(ViewBag.Renkler, "Id", "ColorName"), "Renk seçiniz.", new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.DisplayOrder, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.DisplayOrder, new { @class = "form-control", @type = "number", min = "1" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.DisplayOrder)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.IsPopular, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                <div class="i-checks">
                                    <label>
                                        @Html.CheckBoxFor(x => x.IsPopular, new { @checked = "" })
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>

                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-warning btn-sm" type="reset">Temizle</button>
                                <button class="btn btn-primary btn-sm" type="submit">Kaydet</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->


@section script{
    <script>
        $(document).ready(function () {
            $('#ProductDetail').summernote();
        });
    </script>
    <script>
        $('.dropify').dropify();
    </script>
}