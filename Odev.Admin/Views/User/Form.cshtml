@using Odev.Domain.ViewModels

@model UserViewModel

@{
    ViewBag.Title = "Kullanıcı Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_TopPartialView",
    new TopPartialViewModel
    {
        Title = "Kullanıcı Form",
        ListUrl = Url.Action("Index", "User")
    })

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox ">
                <div class="ibox-content">
                    @using (Html.BeginForm("Save", "User", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.HiddenFor(x => x.Id)

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.NameSurname, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.NameSurname)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.Email, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.Email)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.Phone, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                                <div style="color:red;">@Html.ValidationMessageFor(x => x.Phone)</div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        if (Model.Id == 0 || Model.Id == null)
                        {
                            <div class="form-group  row">
                                @Html.LabelFor(x => x.Pwd, new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    @Html.PasswordFor(x => x.Pwd, new { @class = "form-control" })
                                    <div style="color:red;">@Html.ValidationMessageFor(x => x.Pwd)</div>
                                </div>
                            </div>

                            <div class="hr-line-dashed"></div>
                        }

                        <div class="form-group  row">
                            @Html.LabelFor(x => x.UserTypeId, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.DropDownListFor(x => x.UserTypeId, new SelectList(ViewBag.UserType, "Id", "Title"),
                    "Kullanıcı Tipi Seçiniz", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>

                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-warning btn-sm" type="reset">Temizle</button>
                                <button class="btn btn-primary btn-sm" type="submit">Kaydet</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->