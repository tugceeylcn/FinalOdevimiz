@using Odev.Domain.ViewModels

@model UserViewModel

@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_TopPartialView",
    new TopPartialViewModel
    {
        Title = "Profil",
        ListUrl = Url.Action("index", "User")
    })

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-content">
                @using (Html.BeginForm("ProfilUpdate", "User", FormMethod.Post))
                {
                    @Html.HiddenFor(x => x.Id);

                    <div class="form-group  row">
                        @Html.LabelFor(x => x.Email, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Email, new { @class = "col-sm-12 form-control", placeholder = "info@example.com" })
                            @Html.ValidationMessageFor(x => x.Email)
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="form-group  row">
                        @Html.LabelFor(x => x.Phone, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Phone, new { @class = "col-sm-12 form-control", placeholder = "01234567890" })
                            @Html.ValidationMessageFor(x => x.Phone)
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="form-group  row">
                        @Html.LabelFor(x => x.Pwd, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.PasswordFor(x => x.Pwd, new { @class = "col-sm-12 form-control", placeholder = "*****" })
                            @Html.ValidationMessageFor(x => x.Pwd)
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-primary" type="submit">Güncelle</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>